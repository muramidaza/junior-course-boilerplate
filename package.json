{
  "name": "csssr-school-course",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^5.3.0",
    "connected-react-router": "^6.8.0",
    "csssr-school-utils": "https://github.com/CSSSR-School/junior-course-utils.git",
    "discount": "https://github.com/CSSSR-School/junior-course-input-discount.git",
    "history": "^4.7.2",
    "immutable": "^3.8.1",
    "modules": "^0.4.0",
    "react": "^16.14.0",
    "react-addons-shallow-compare": "^15.6.2",
    "react-dom": "^16.12.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.2.0",
    "redux": "^4.0.5",
    "reselect": "^4.0.0",
    "school-product-card": "^0.1.0",
    "seamless-immutable": "^7.1.3",
    "uws": "^200.0.0"
  },
  "scripts": {
    "start": "concurrently \"npm:remotedev\" \"react-scripts start\"",
    "build": "react-scripts build",
    "lint:js": "eslint \"src/**/*.{js, jsx}\" --cache --fix",
    "remotedev": "remotedev --hostname=localhost --port=8000"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.2",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "redux-devtools-extension": "^2.13.8",
    "remote-redux-devtools": "^0.5.16",
    "remotedev-server": "^0.2.7"
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
